{
  "name": "yadori",
  "version": "0.6.0",
  "description": "Inter-Species Intelligence Coexistence Framework â€” birth unknown intelligences on locally running AI agents",
  "type": "module",
  "engines": {
    "node": ">=22.12.0"
  },
  "exports": {
    ".": {
      "import": "./dist/engine/src/index.js",
      "types": "./dist/engine/src/index.d.ts"
    },
    "./adapters": {
      "import": "./dist/adapters/src/index.js",
      "types": "./dist/adapters/src/index.d.ts"
    }
  },
  "files": [
    "dist/engine/",
    "dist/adapters/",
    "dist/scripts/",
    "dist/visual/",
    "bin/",
    "templates/",
    "visual/index.html",
    "visual/birth-certificate.html",
    "README.md",
    "README.ja.md",
    "LICENSE.md",
    "DATA_RIGHTS.md",
    "CHANGELOG.md"
  ],
  "bin": {
    "yadori": "./bin/yadori.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "postbuild": "node scripts/copy-assets.js",
    "dev": "tsc --watch --project tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "setup": "node --import tsx scripts/setup.ts",
    "heartbeat": "node --import tsx scripts/heartbeat.ts",
    "sensors": "node --import tsx scripts/sensors.ts",
    "dashboard": "node --import tsx visual/server.ts",
    "apply-identity": "node --import tsx scripts/apply-identity.ts",
    "snapshot": "node --import tsx scripts/snapshot.ts",
    "setup-webhook": "node --import tsx scripts/setup-webhook.ts",
    "version": "node --import tsx scripts/version.ts",
    "update": "node --import tsx scripts/update.ts",
    "backup": "node --import tsx scripts/backup.ts",
    "health": "node --import tsx scripts/health.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kentarow/yadori.git"
  },
  "homepage": "https://github.com/kentarow/yadori#readme",
  "bugs": {
    "url": "https://github.com/kentarow/yadori/issues"
  },
  "keywords": [
    "ai",
    "agent",
    "intelligence",
    "coexistence",
    "entity",
    "artificial-life",
    "local-first",
    "openclaw",
    "perception",
    "multimodal"
  ],
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  },
  "license": "SEE LICENSE IN LICENSE.md"
}
