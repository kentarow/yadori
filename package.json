{
  "name": "yadori",
  "version": "0.3.0",
  "description": "Inter-Species Intelligence Coexistence Framework",
  "type": "module",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "tsc --watch --project tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "setup": "node --import tsx scripts/setup.ts",
    "heartbeat": "node --import tsx scripts/heartbeat.ts",
    "sensors": "node --import tsx scripts/sensors.ts",
    "dashboard": "node --import tsx visual/server.ts",
    "apply-identity": "node --import tsx scripts/apply-identity.ts",
    "snapshot": "node --import tsx scripts/snapshot.ts",
    "setup-webhook": "node --import tsx scripts/setup-webhook.ts",
    "version": "node --import tsx scripts/version.ts",
    "update": "node --import tsx scripts/update.ts",
    "backup": "node --import tsx scripts/backup.ts",
    "health": "node --import tsx scripts/health.ts"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "private": true,
  "license": "SEE LICENSE IN LICENSE.md"
}
